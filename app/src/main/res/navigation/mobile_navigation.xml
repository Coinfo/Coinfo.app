<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="app.coinfo.feature.dashboard.ui.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_coins"
        android:name="app.coinfo.feature.coins.ui.CoinsFragment"
        android:label="@string/title_coins"
        tools:layout="@layout/fragment_coins" />

    <fragment
        android:id="@+id/navigation_portfolios"
        android:name="app.coinfo.portfolios.ui.PortfoliosFragment"
        android:label="@string/title_portfolios"
        tools:layout="@layout/fragment_portfolios" />

</navigation>
