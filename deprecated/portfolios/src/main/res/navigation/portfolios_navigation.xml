<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/portfolio_navigation_graph"
    app:startDestination="@id/overviewFragment">

    <fragment
        android:id="@+id/overviewFragment"
        android:name="app.coinfo.feature.portfolios.ui.overview.OverviewFragment"
        android:label="fragment_overview"
        tools:layout="@layout/fragment_overview" >
        <action
            android:id="@+id/action_overviewFragment_to_destination_add_portfolio"
            app:destination="@id/destination_add_portfolio" />
        <action
            android:id="@+id/action_overviewFragment_to_profileDetailsFragment"
            app:destination="@id/destination_portfolio_details" />
    </fragment>

    <dialog android:id="@+id/destination_add_portfolio"
        android:name="app.coinfo.feature.portfolios.ui.add.AddPortfolioDialog"
        android:label="dialog_add_portfolio"
        tools:layout="@layout/dialog_add_portfolio">
    </dialog>

    <fragment
        android:id="@+id/destination_portfolio_details"
        android:name="app.coinfo.feature.portfolios.ui.details.portfolio.PortfolioDetailsFragment"
        android:label="fragment_profile_details"
        tools:layout="@layout/fragment_portfolio_details" >
        <action
            android:id="@+id/action_destination_portfolio_details_to_assetDetailsFragment"
            app:destination="@id/destination_asset_details" />
    </fragment>

    <fragment
        android:id="@+id/destination_asset_details"
        android:name="app.coinfo.feature.portfolios.ui.details.asset.AssetDetailsFragment"
        android:label="fragment_asset_details"
        tools:layout="@layout/fragment_asset_details" />


</navigation>
