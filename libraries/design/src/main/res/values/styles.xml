<resources>

    <style name="DesignActionBarTitle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DesignActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">?android:colorBackground</item>
        <item name="titleTextStyle">@style/DesignActionBarTitle</item>
        <!-- Remove Shadow from Action Bar -->
        <item name="elevation">0dp</item>
    </style>

    <style name="DesignTitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="DesignSubtitle" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DesignActionButton" parent="Widget.Material3.Button.ElevatedButton.Icon">
        <item name="backgroundTint">#182331</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconTint">?attr/colorPrimary</item>
    </style>

</resources>
