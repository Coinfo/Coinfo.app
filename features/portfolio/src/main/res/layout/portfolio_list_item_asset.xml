<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.entrypoint.PortfolioFragment">


        <ImageView
            android:id="@+id/image_view_asset_icon"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/text_view_asset_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textAllCaps="true"
            android:maxLines="1"
            tools:text="cro"
            app:layout_constraintBottom_toTopOf="@+id/text_view_asset_name"
            app:layout_constraintStart_toEndOf="@+id/image_view_asset_icon"
            app:layout_constraintTop_toTopOf="@+id/image_view_asset_icon" />

        <TextView
            android:id="@+id/text_view_asset_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            tools:text="Cronos"
            app:layout_constraintBottom_toBottomOf="@+id/image_view_asset_icon"
            app:layout_constraintStart_toEndOf="@+id/image_view_asset_icon"
            app:layout_constraintTop_toBottomOf="@+id/text_view_asset_symbol" />

        <TextView
            android:id="@+id/text_view_asset_total_holdings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:maxLines="1"
            tools:text="35000"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_asset_symbol"
            app:layout_constraintStart_toEndOf="@+id/text_view_asset_symbol"
            app:layout_constraintTop_toTopOf="@+id/text_view_asset_symbol" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/text_view_asset_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="8000$"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_asset_symbol"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/text_view_asset_symbol" />

        <TextView
            android:id="@+id/text_view_asset_all_time_profit_lose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            tools:text="5000$"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_asset_name"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:layout_constraintTop_toTopOf="@+id/text_view_asset_name" />

        <TextView
            android:id="@+id/text_view_asset_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            tools:text="10.5$"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_asset_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_view_asset_symbol" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
